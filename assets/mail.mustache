<html>
  <head>
    <style>
      .header { 
        display: flex;
        justify-content: space-between;
        background-color: {{color}}; 
        max-height: 5em;
      }
      body {
        font-family: -apple-system,BlinkMacSystemFont,Segoe UI,Helvetica,Arial,sans-serif,Apple Color Emoji,Segoe UI Emoji;
      }
      .svg-container {
        background-color: rgba(245,245,245,0.6);
        padding: 0.5em;
        height: 4em;
        max-height: 4em;
      }
      .email-header {
        display: flex;
        align-self: center;
        padding: 1em;
      }
      .content {
        padding: 1em;
      }
      .toskalogo {
        height: 100%;
      }
    </style>
  </head>
  <body>
    <div class="header">
      <div class="email-header">
        {{header}}
      </div>
      <div class="svg-container">
        <img class="toskalogo" src='https://pate.toska.cs.helsinki.fi/toskalogo.svg'>
      </div>
    </div>
    <div class="content">
      {{{content}}}
    </div>
  </body>
</html>